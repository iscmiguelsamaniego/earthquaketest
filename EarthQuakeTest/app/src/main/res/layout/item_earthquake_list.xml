<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/gen_dimen_16"
    card_view:cardCornerRadius="2sp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/item_magnitude_color"
            android:layout_width="@dimen/gen_dimen_12"
            android:layout_height="120dp"
            tools:background="@color/colorYellow" />

        <TextView
            android:id="@+id/item_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_magnitude_color"
            android:padding="@dimen/gen_dimen_6"
            android:textSize="@dimen/gen_dimen_20"
            android:textStyle="bold"
            tools:text="32km W of Sola, Vanuatu" />

        <TextView
            android:id="@+id/item_magnitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_place"
            android:layout_toEndOf="@id/item_magnitude_color"
            android:paddingStart="@dimen/gen_dimen_6"
            android:textSize="@dimen/gen_dimen_18"
            tools:ignore="RtlSymmetry"
            tools:text="6.5 Grados Richter" />

        <TextView
            android:id="@+id/item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_magnitude"
            android:layout_toEndOf="@id/item_magnitude_color"
            android:paddingStart="@dimen/gen_dimen_6"
            android:textSize="@dimen/gen_dimen_18"
            tools:ignore="RtlSymmetry"
            tools:text="1388592209000" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
